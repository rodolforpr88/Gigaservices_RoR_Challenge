<div id="<%= dom_id user %>">
  <p>
    <strong>Gender:</strong>
    <%= user.gender %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= user.title %>
  </p>

  <p>
    <strong>First Name:</strong>
    <%= user.first_name %>
  </p>

  <p>
    <strong>Last Name:</strong>
    <%= user.last_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Avatar:</strong>
    <%= image_tag user.avatar %>
  </p>

</div>
